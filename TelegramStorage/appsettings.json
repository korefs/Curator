{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=telegram_storage;Username=postgres;Password=password"
  },
  "TelegramSettings": {
    "BotToken": "YOUR_BOT_TOKEN_HERE",
    "StorageChatId": "YOUR_STORAGE_CHAT_ID",
    "MaxFileSizeBytes": 52428800,
    "AllowedContentTypes": ["image/jpeg", "image/png", "image/gif", "application/pdf", "text/plain", "application/zip"]
  },
  "JwtSettings": {
    "SecretKey": "YourSuperSecretKeyThatShouldBeAtLeast32Characters",
    "Issuer": "TelegramStorage",
    "Audience": "TelegramStorageUsers",
    "ExpirationInHours": 24
  }
}
