# Environment Variables for Telegram Storage Application
# Copy this file to .env and fill in your actual values

# CRITICAL: JWT Secret Key (must be at least 32 characters)
# Generate with: openssl rand -base64 32
JWT_SECRET_KEY=your-32-character-or-longer-secret-key-here

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here
TELEGRAM_STORAGE_CHAT_ID=your-telegram-chat-id-here

# Database Connection
DATABASE_CONNECTION_STRING=Host=localhost;Database=telegram_storage;Username=postgres;Password=password

# Optional: Override default settings
ASPNETCORE_ENVIRONMENT=Production

# Security Settings (optional overrides)
MAX_FILE_SIZE_BYTES=104857600
MAX_DAILY_UPLOAD_SIZE_BYTES=1073741824
MAX_FILES_PER_USER=1000

# Rate Limiting (optional overrides)
REQUESTS_PER_MINUTE=60
UPLOAD_REQUESTS_PER_MINUTE=10
AUTH_ATTEMPTS_PER_HOUR=5

# NOTE: Never commit actual secret values to version control
# Add .env to your .gitignore file